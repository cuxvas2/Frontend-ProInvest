@model Frontend_ProInvest.Models.InversionistaViewModel

@{
    ViewData["Title"] = "DatosPersonales";
}
<head>
    <link rel="stylesheet" href="~/css/Formulario.css" asp-append-version="true" />
</head>
<div class="row justify-content-md-center">
    @if(ViewBag.Error != null)
    {
        <div class="alert alert-danger" role="alert">
            @ViewBag.Error
        </div>
    }
    <div class="col-md-4 col-form-img">
        <img src="/images/ahorro.jpg" alt="Monedas creciendo como plantas" class="img-fluid form-img">
    </div>
    <div class="col-md-4">
        <h2 class="text-lg-center">Una inversión segura</h2>
        <h4 class="text-lg-center">Datos personales</h4>
        <h6 class="text-md-center">Inicia tu vida como inversionista con nosotros</h6>
        <form asp-action="DatosPersonales">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <p class="text-sm-center">Los elementos marcados con un asterísco (*) son obligatorios</p>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ApellidoPaterno" class="control-label"></label>
                <input asp-for="ApellidoPaterno" class="form-control" />
                <span asp-validation-for="ApellidoPaterno" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ApellidoMaterno" class="control-label"></label>
                <input asp-for="ApellidoMaterno" class="form-control" />
                <span asp-validation-for="ApellidoMaterno" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rfc" class="control-label"></label>
                <input asp-for="Rfc" class="form-control" />
                <span asp-validation-for="Rfc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaNacimiento" class="control-label"></label>
                @{
                    string date = DateTime.Now.Year.ToString() + '-' + DateTime.Now.Month.ToString() + '-' + DateTime.Now.Day.ToString();
                }
                <input asp-for="FechaNacimiento" class="form-control" type="date" min="1900-01-01" max="@date" />
                <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GradoAcademico" class="control-label"></label>
                <select asp-for="GradoAcademico" class="form-select">
                    <option value="">Seleccione un valor para este campo</option>
                    @foreach(var nivel in ViewBag.NivelesEstudio)
                    {
                        <option value="@nivel">@nivel</option>
                    }
                </select>
                <span asp-validation-for="GradoAcademico" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmpresaTrabajo" class="control-label"></label>
                <input asp-for="EmpresaTrabajo" class="form-control" />
                <span asp-validation-for="EmpresaTrabajo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Profesion" class="control-label"></label>
                <input asp-for="Profesion" class="form-control" />
                <span asp-validation-for="Profesion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CorreoElectronico" class="control-label"></label>
                <input asp-for="CorreoElectronico" class="form-control" />
                <span asp-validation-for="CorreoElectronico" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TelefonoCelular" class="control-label"></label>
                <input asp-for="TelefonoCelular" class="form-control" />
                <span asp-validation-for="TelefonoCelular" class="text-danger"></span>
            </div>
            <div class="text-center mt-3">
                <input type="submit" name="BtnNext" value="Siguiente" class="btn btn-primary" />
                <input type="submit" name="BtnPrevious" value="Anterior" class="btn btn-primary" style="display:none;"/>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
