@model Frontend_ProInvest.Models.ContratoInversionModel
@{
    ViewData["Title"] = "Mi Inversión";
}
<div class="row justify-content-md-center">
    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger" role="alert">
            @ViewBag.Error
        </div>
    }
    <h2 class="text-center">Descarga tu contrato de inversión</h2>
    <div class="col-md-4 text-center">
        <form asp-action="MiInversion" class="mt-3">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FolioInversion" class="control-label"></label>
                <input asp-for="FolioInversion" class="form-control" placeholder="Ej: 1234"/>
                <span asp-validation-for="FolioInversion" class="text-danger"></span>
            </div>
            <div class="text-center mt-3">
                <input type="submit" name="Buscar" value="Buscar" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div class="col-md-4">
        <table class="table">
            <tbody>
                <tr>
                    <th scope="row">Folio</th>
                    @if(ViewBag.Folio != null)
                    {
                        <td>@ViewBag.Folio</td>
                    }
                    else
                    {
                        <td></td>
                    }
                </tr>
                <tr>
                    <th scope="row">Importe</th>
                    @if(ViewBag.Importe != null)
                    {
                        <td>@ViewBag.Importe</td>
                    }
                    else
                    {
                        <td></td>
                    }
                </tr>
                <tr>
                    <th scope="row">Fecha</th>
                    @if(ViewBag.Fecha != null)
                    {
                        <td>@ViewBag.Fecha</td>
                    }
                    else
                    {
                        <td></td>
                    }
                </tr>
                <tr>
                    <th scope="row">Contrato</th>
                    <td>
                        <button type="button" class="btn btn-primary" id="descargarContrato">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-download" viewBox="0 0 16 16">
                                <path d="M.5 9.9a.5.5 0 0 1 .5.5v2.5a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1v-2.5a.5.5 0 0 1 1 0v2.5a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2v-2.5a.5.5 0 0 1 .5-.5" />
                                <path d="M7.646 11.854a.5.5 0 0 0 .708 0l3-3a.5.5 0 0 0-.708-.708L8.5 10.293V1.5a.5.5 0 0 0-1 0v8.793L5.354 8.146a.5.5 0 1 0-.708.708z" />
                            </svg>
                            Descargar
                        </button>
                    </td>
                </tr>
            </tbody>
        </table>
        <img src="@ViewBag.Firma" id="firmaImage" class="d-none" />
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script defer src="~/js/contrato.js"></script>
}
