@model IEnumerable<Frontend_ProInvest.Models.BancosViewModel>
@{
    ViewData["Title"] = "Administrar Bancos";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<head>
    <script defer src="~/js/administrarBancos.js"></script>
</head>
<h1>Gestionar Bancos</h1>

<div class="table-responsive">
    <table class="table table-hover table-bordered table-striped">
        <thead class="thkead-dar">
            <tr>
                <th class="text-center">
                    Nombre
                </th>
                <th class="text-center">
                    Editar
                </th>
                <th class="text-center">
                    Eliminar
                </th>
            </tr>
        </thead>
        <tbody class="table-group-divider">
            @foreach (var item in Model)
            {
                <tr data-banco-id="@item.IdBanco" data-banco-nombre="@item.Banco">
                    <td  class="text-center">
                        @Html.DisplayFor(modelItem => item.Banco)
                    </td>
                    <td class="text-center">
                        <a title="Editar" id="iconoEditar" data-bs-toggle="modal" data-bs-target="#modalEditar"
                            class="submit"><i class="bi bi-pencil-fill"></i></a>
                    </td>
                    <td class="text-center">
                        <a title="Eliminar" id="iconoEliminar" data-bs-toggle="modal" data-bs-target="#modalEliminar"
                            class="submit"><i class="bi bi-trash-fill"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div class="modal fade" id="modalAgregar" tabindex="-1" aria-labelledby="modalAgregarLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalAgregarLabel">Agregar banco</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div id="contenedorAgregar"></div>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="modalEditar" tabindex="-1" aria-labelledby="modalEditarLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalEditarLabel">Editar banco</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div id="contenedorEditar"></div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modalEliminar" tabindex="-1" aria-labelledby="modalEliminarLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalEliminarLabel">Eliminar banco</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div id="contenedorEliminar"></div>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid text-end mt-4">
    <a title="Agregar" id="iconoAgregar" data-bs-toggle="modal" data-bs-target="#modalAgregar" class="submit"><i
            class="bi bi-plus-circle-fill"></i></a>
</div>
