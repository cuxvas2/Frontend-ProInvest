@model Frontend_ProInvest.Models.TipoInversionViewModel

@{
    ViewData["Title"] = "EditarTipoInversion";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Editar Tipo de Inversion</h1>

<h4>Tipo de Inversion</h4>
<hr />
<div class="row">
    <div class="col-md-4 ">
        <form asp-action="EditarTipoInversion">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdTipo" class="form-control" />
            <div class="form-group mt-2">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Descripcion" class="control-label"></label>
                <input asp-for="Descripcion" class="form-control text-wrap" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Rendimiento" class="control-label"></label>
                <input asp-for="Rendimiento" class="form-control" />
                <span asp-validation-for="Rendimiento" class="text-danger"></span>
            </div>
            <div class="form-group mt-4">
                <a asp-action="AdministrarTiposDeInversion" class="btn btn-secondary">Regresar</a> |
                <input type="submit" value="Guardar" class="btn btn-primary" /> 
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
